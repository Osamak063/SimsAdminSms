<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.osamakhalid.simsadmin.ui.fragments.ImportDataFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/spinner_color">

            <Spinner
                android:id="@+id/import_classes_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:popupBackground="@color/spinner_color"
                ></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/spinner_color">

            <Spinner
                android:id="@+id/import_sections_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:popupBackground="@color/spinner_color"
                ></Spinner>
        </RelativeLayout>

        <Button
            android:id="@+id/import_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="20dp"
            android:enabled="false"
            android:text="Import"
            android:textAllCaps="false" />

    </LinearLayout>

</FrameLayout>
